generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model manual_label {
  video_id String
  platform String
  label    String
  reason   String

  @@id([video_id, platform, label, reason])
}

model playlist {
  id            String          @id
  owner_id      String?
  last_accessed DateTime?       @db.Date
  name          String?
  description   String?
  thumbnail     String?
  playlist_item playlist_item[]
}

model playlist_item {
  playlist_id    String
  video_id       String
  playlist_index Int
  platform       String
  playlist       playlist       @relation(fields: [playlist_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  video_metadata video_metadata @relation(fields: [video_id, platform], references: [id, platform], onDelete: Cascade, onUpdate: NoAction)

  @@id([playlist_id, playlist_index])
}

model video_metadata {
  id            String
  thumbnail     String?
  title         String
  uploader      String
  upload_date   DateTime?       @db.Date
  duration      Int?
  platform      String
  whitelisted   Boolean         @default(false)
  uploader_id   String
  playlist_item playlist_item[]

  @@id([id, platform])
}

model user {
  id          String   @id
  ballot_id   String?
  last_active DateTime @db.Date
}
