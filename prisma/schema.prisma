generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model manual_label {
  video_id String
  platform String
  label    String
  reason   String

  @@id([video_id, platform, label, reason])
}

model playlist {
  id            String          @id
  owner_id      String?
  thumbnail     String?
  name          String?
  description   String?
  last_accessed DateTime?       @db.Date
  playlist_item playlist_item[]
}

model playlist_item {
  id             Int            @id @default(autoincrement())
  playlist_id    String
  video_id       String
  platform       String
  playlist       playlist       @relation(fields: [playlist_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  video_metadata video_metadata @relation(fields: [video_id, platform], references: [id, platform], onDelete: Cascade, onUpdate: NoAction)
}

model video_metadata {
  id            String
  thumbnail     String?
  title         String
  uploader      String
  uploader_id   String
  upload_date   DateTime?       @db.Date
  duration      Int?
  platform      String
  whitelisted   Boolean         @default(false)
  ballot_item   ballot_item[]
  playlist_item playlist_item[]

  @@id([id, platform])
}

model user {
  id                 String        @id
  last_active        DateTime      @db.Date
  last_ballot_update DateTime?     @db.Date
  ballot_item        ballot_item[]
}

model label_config {
  name    String
  type    String
  details String
  trigger String @id
}

model ballot_item {
  user_id        String
  video_id       String
  platform       String
  index          Int
  user           user           @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  video_metadata video_metadata @relation(fields: [video_id, platform], references: [id, platform], onDelete: Cascade, onUpdate: NoAction)

  @@id([user_id, index])
}
